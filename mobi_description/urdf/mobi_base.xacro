        </geometry>
    </collision>
</link>

<joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.17 -0.175 0.06" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="-0.0 1.0 0.0"/>
</joint>


